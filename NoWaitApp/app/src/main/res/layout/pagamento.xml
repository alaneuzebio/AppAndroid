<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/pagamento">

    <TextView
        android:id="@+id/titulo_pag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="PAGAMENTO"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/backblack"/>

    <TextView
        android:id="@+id/cartao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:text="Número Cartão"
        android:textSize="20sp"
        android:textColor="@color/backblack"/>

    <EditText
        android:id="@+id/cartao_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:hint="Digite o número do cartão"
        android:inputType="number"
        android:maxLength="16"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/validade"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="Validade"
        android:textSize="20sp"
        android:textColor="@color/backblack"/>

    <EditText
        android:id="@+id/cartao_validade_mes"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:hint="Mês"
        android:maxLength="2"
        android:inputType="number"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/cartao_validade_ano"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="150dp"
        android:hint="Ano"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="Código de Segurança"
        android:textSize="20sp"
        android:textColor="@color/backblack"/>

    <EditText
        android:id="@+id/cartao_cod"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:hint="XXX"
        android:inputType="numberPassword"
        android:maxLength="3"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/confirmar_cartao"
        android:layout_marginTop="30dp"
        android:layout_width="165dp"
        android:layout_marginLeft="95dp"
        android:layout_height="wrap_content"
        android:onClick="confirmar_cartao"
        android:text="Confirmar"
        android:background="@drawable/botaologin"
        android:textSize="20sp"/>

</LinearLayout>